@using TodoApp.Models
@model Todo
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Create</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
</head>
<body>
    <div class="container">
        <a class="btn btn-primary my-2" href="/Todo/Index">List</a>
        <form method="post">
            <div class="form-group">
                <label for="Title">Title</label>
                <input value="@Model.Title" type="text" class="form-control" placeholder="Title" name="Title" required>
            </div>
            <div class="form-group">
                <label for="Description">Description</label>
                <input value="@Model.Description" type="text" class="form-control" placeholder="Description" name="Description">
            </div>
            <div class="form-group">
                <label for="Deadline">Deadline</label>
                <input value="@Model.Deadline.ToString("yyyy-MM-dd HH:mm")" type="datetime-local" class="form-control" placeholder="Deadline" name="Deadline">
            </div>
            <button class="btn btn-success my-2">Edit</button>
        </form>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
</body>
</html>